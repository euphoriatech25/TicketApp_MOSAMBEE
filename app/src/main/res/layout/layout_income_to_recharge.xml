<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:tint="#100909"
                android:visibility="visible"
                android:src="@drawable/ic_baseline_card_membership_24"
                tools:srcCompat="?attr/actionModeSelectAllDrawable"
                tools:visibility="visible" />
            <TextView
                android:id="@+id/card_num"
                android:layout_marginStart="20dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="कार्ड देखाउनु होस् "
                android:padding="7dp"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
               android:text="रिचार्ज रकम :"/>
            <EditText
                android:id="@+id/amount"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:inputType="number"
                android:layout_marginStart="10dp"
                android:text=""
                android:padding="7dp"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="15dp"
                android:text="रद्द गर्नुहोस्"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_submit"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="15dp"
                android:text="बुझाउनुहोस्"
                android:textSize="20sp" />
        </LinearLayout>
